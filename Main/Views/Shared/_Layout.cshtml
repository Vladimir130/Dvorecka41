<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
 
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/mdb")
    @Scripts.Render("~/bundles/magnify")
    @Scripts.Render("~/bundles/my")
    @RenderSection("scripts", required: false)

</head>
<body>

    <div class="div-block">
        <div class="container-fluid">
            <nav class="navbar  navbar-expand-lg navbar-dark indigo fixed-top scrolling-navbar">
                <div class="container">
                    @Html.ActionLink("Церква \"Відродження\"", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ul class="navbar-nav ml-auto" id="menu">
                            <li class="nav-item">@Html.ActionLink("Головна", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Про нас", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Контакти", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Трансляції", "Online", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    @RenderBody()
    <hr />
    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year – dvorecka41.com</p>
        </div>
    </footer>

</body>
</html>
